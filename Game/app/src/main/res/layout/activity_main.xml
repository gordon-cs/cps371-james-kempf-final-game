<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jameskempf.game.MainActivity"
    android:id="@+id/relativeLayout"
    android:background="@drawable/titlebackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start"
        android:textSize="50dp"
        android:clickable="true"
        android:layout_above="@+id/shop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:textColor="#463c2c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOP"
        android:id="@+id/shop"
        android:textSize="50dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="150dp"
        android:textColor="#463c2c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Highscore: 0"
        android:id="@+id/highscoreText"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="350dp"
        android:textColor="#463c2c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coins: 0"
        android:id="@+id/coinText"
        android:layout_below="@+id/highscoreText"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#463c2c" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear all"
        android:id="@+id/clear"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_marginBottom="41dp"
        android:max="2"
        android:progress="1"
        android:indeterminate="false"
        android:layout_above="@+id/clear"
        android:layout_alignLeft="@+id/highscoreText"
        android:layout_alignStart="@+id/highscoreText"
        android:layout_alignRight="@+id/highscoreText"
        android:layout_alignEnd="@+id/highscoreText"
        android:foregroundTint="#baff6b"
        android:progressTint="#463c2c"
        android:thumbTint="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Difficulty"
        android:id="@+id/levelText"
        android:layout_above="@+id/level"
        android:layout_centerHorizontal="true"
        android:textColor="#463c2c" />

</RelativeLayout>
